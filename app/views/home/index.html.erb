 <div class="hero-section">
    <h1>N.U.V.E.X.A</h1>
    <p>Your one-stop shop for all your e-commerce needs!</p>
    <%= link_to "Shop Now", products_path, class: "btn-primary-custom" %>
  </div>

  <div class="features-section">
    <div class="feature">
      <h3>New Arrivals</h3>
      <p>Discover the latest trends and unbeatable prices in our new collection.</p>
    </div>
    <div class="feature">
      <h3>Easy Returns</h3>
      <p>Hassle-free returns for a smooth shopping experience, every time.</p>
    </div>
    <div class="feature">
      <h3>Shop Now, Pay Later</h3>
      <p>Enjoy flexible payment options to make your shopping experience even easier.</p>
    </div>
  </div>
   <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #fff;
      margin: 0;
      padding: 0;
    }

    .hero-section {
      background-color: #374151;
      color: white;
      padding: 80px 20px;
      text-align: center;
    }

    .hero-section h1 {
      font-size: 3em;
      margin-bottom: 20px;
    }

    .hero-section p {
      font-size: 1.2em;
      margin-bottom: 30px;
    }

    .btn-primary-custom {
      background-color: #da9406;
      color: white;
      border: none;
      padding: 15px 25px;
      font-size: 1.1em;
      cursor: pointer;
      border-radius: 5px;
    }

    .btn-primary-custom:hover {
      background-color: #da9406;
    }

    .features-section {
      display: flex;
      justify-content: space-around;
      padding: 50px 20px;
    }

    .feature {
      background-color: white;
      padding: 30px;
      text-align: center;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      width: 30%;
    }

    .feature h3 {
      margin-bottom: 20px;
      color: #374151;
    }

    .feature p {
      color: #555;
    }
  </style>

  <!-- Customer Testimonials Section -->
  <div class="testimonials-section bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 py-20 my-10">
    <div class="container mx-auto px-6">
      <h2 class="section-title text-4xl font-extrabold text-center text-white mb-12">
        What Our Customers Say
      </h2>
      <div class="testimonial-container flex flex-wrap justify-center gap-6">
        <!-- Testimonial 1 -->
        <div class="testimonial-box w-full md:w-1/3 bg-white rounded-lg shadow-lg py-6 px-8 text-center hover:shadow-xl transform hover:-translate-y-1 transition duration-300 ease-in-out">
          <p class="testimonial-text text-gray-700 text-lg italic mb-4">
            "I've been shopping on Nuvexa Stores for years, and it's always been a fantastic experience!"
          </p>
          <p class="customer-name text-indigo-600 font-bold text-sm">Jane Doe</p>
        </div>
        <!-- Testimonial 2 -->
        <div class="testimonial-box w-full md:w-1/3 bg-white rounded-lg shadow-lg py-6 px-8 text-center hover:shadow-xl transform hover:-translate-y-1 transition duration-300 ease-in-out">
          <p class="testimonial-text text-gray-700 text-lg italic mb-4">
            "Always an unforgettable experience shopping on Nuvexa Stores!"
          </p>
          <p class="customer-name text-purple-600 font-bold text-sm">John Doe</p>
        </div>
        <!-- Testimonial 3 -->
        <div class="testimonial-box w-full md:w-1/3 bg-white rounded-lg shadow-lg py-6 px-8 text-center hover:shadow-xl transform hover:-translate-y-1 transition duration-300 ease-in-out">
          <p class="testimonial-text text-gray-700 text-lg italic mb-4">
            "I've been shopping on Nuvexa Stores for years, and it's always been a fantastic experience!"
          </p>
          <p class="customer-name text-pink-600 font-bold text-sm">Chris Smith</p>
        </div>
      </div>
    </div>
  </div>
  
  

  <!-- Newsletter Subscription -->
  <div class="newsletter">
    <h2 class="text-3xl font-bold mb-6">Stay Updated</h2>
    <p class="mb-8">Subscribe to our newsletter for the latest updates and offers.</p>
    <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
      <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "p-2 rounded-l text-gray-800" %>
      <%= submit_tag "Subscribe", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
    <% end %>
  </div>


  <footer>
    <p>&copy; Nuvexa 2024</p>
  </footer>
</div><!--/.container-->